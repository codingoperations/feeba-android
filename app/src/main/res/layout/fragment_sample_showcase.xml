<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sample.SampleShowCaseActivity">

    <Button
        android:id="@+id/buttonCaseManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Case Management"
        app:layout_constraintBottom_toTopOf="@+id/buttonRateApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRateApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Rate App"
        app:layout_constraintBottom_toTopOf="@id/buttonRateExperienceDefaultUi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRateExperienceDefaultUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Rate Exp Default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonRateExperienceHeadless"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRateExperienceHeadless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Rate Exp Headless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonRateExperienceDefaultUi" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchEnv"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep it on to use Prod or Off for Dev environemnt"
        android:checked="true"
        android:textOff="DEV"
        android:textOn="PROD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextLangCode"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginEnd="16dp"
        android:inputType="textPersonName"
        android:text="ru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchEnv" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Set the language. Ensure you have a config for this language code"
        app:layout_constraintBottom_toBottomOf="@+id/editTextLangCode"
        app:layout_constraintEnd_toStartOf="@+id/editTextLangCode"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>