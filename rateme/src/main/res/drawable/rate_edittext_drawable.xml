<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape  android:shape="rectangle"   >
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
            <stroke android:width="1dp" android:color="?attr/colorControlActivated" />
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <shape  android:shape="rectangle">
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
            <stroke android:width="1dp" android:color="?attr/colorControlNormal" />
            <solid android:color="#3333"/>
        </shape>
    </item>
</selector>
